{% extends "AfandiBlogBundle::frontlayout.html.twig" %}

{% block content %}
	
	<!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {% for blog in blogs %}
					<div class="post-preview">
	                    <a href="{{ path('blog_post', {'id': blog.id}) }}">
	                        <h2 class="post-title">
	                            {{ blog.title | title }}
	                        </h2>
	                        <h3 class="post-subtitle">
	                            {{ blog.content |striptags [:50]}} ..
	                        </h3>
	                    </a>
	                    <p class="post-meta">Posted by <a href="#">{{blog.author}}</a> on {{blog.createdAt | date("F d, Y")}}</p>
	                </div>
	                <hr>
                {% endfor %}
                {{ knp_pagination_render(blogs, 'AfandiBlogBundle:Pagination:frontpagination.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
